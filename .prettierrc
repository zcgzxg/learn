{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": "*.wxs",
      "options": {
        "semi": true,
        "singleQuote": true,
        "parser": "babel"
      }
    },
    {
      "files": "*.wxml",
      "options": {
        "printWidth": 60,
        "semi": true,
        "singleQuote": true,
        "parser": "angular"
      }
    },
    {
      "files": "*.+(scss|css|wxss)",
      "options": {
        "parser": "scss"
      }
    }
  ]
}
